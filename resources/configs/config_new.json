{
  "log": {
    "level": "info",
    "file": "output/navteq-validator.log",
    "configPath": "/tmp/pxpoint-configs/log-services/cpp/logging-development.json"
  },
  "autoRules": {
    "rdf": [
      "RdfIntegrityRule",
      "DataTypeValidationRule",
      "LinksTableRule",
      "LinksGeometryRule",
      "PoiTableRule",
      "BuildingTableRule",
      "GeometryEquivalenceRule"
    ],
    "shapefiles": [
      "ShapefileCompletenessRule",
      "ShapefilePrjRule",
      "GeometryEquivalenceRule"
    ],
    "3d-landmarks": [
      "3DFileCompletenessRule",
      "ObjMtlReferenceRule"
    ],
    "default": [
      "3DFileCompletenessRule"
    ],
    "rootRules": [
      "RootStructureRule"
    ]
  },
  "parallelism": 4,
  "parallelismByMode": {
    "auto": 4,
    "rdf": 3,
    "3d-landmarks": 2,
    "shapefiles": 2
  },
  "maxTasksInFlight": 8,
  "report": {
    "json": "output/report.json",
    "csv": "output/report.csv"
  },
  "alerts": {
    "enabled": true,
    "configPath": "config/alerts.local.json"
  },
  "configureRules": {
    "3DFileCompletenessRule": {
      "requiredSuffixes": [
        "_L.OBJ",
        "_L.MTL",
        "_S.OBJ",
        "_S.MTL",
        "_ICON.TGA"
      ],
      "searchRecursively": true
    },
    "BuildingTableRule": {
      "require_sdo_or_wkt": true,
      "expectedHeaders": [
        "BUILDING_ID",
        "BUILDING_TYPE",
        "HEIGHT",
        "SDO",
        "WKT",
        "LAT",
        "LON"
      ]
    },
    "GeometryEquivalenceRule": {
      "fieldName": "LINK_ID",
      "tolerance": 1e-06
    },
    "LinksGeometryRule": {
      "require_sdo_or_wkt": true,
      "expectedHeaders": [
        "LINK_ID",
        "SDO",
        "WKT"
      ]
    },
    "LinksTableRule": {
      "check_private": false,
      "check_tollway": false,
      "check_public_access": false,
      "boolean_tokens": [
        "true",
        "false",
        "1",
        "0",
        "yes",
        "no"
      ],
      "expectedHeaders": [
        "LINK_ID",
        "ACCESS_ID",
        "FUNCTIONAL_CLASS",
        "TRAVEL_DIRECTION",
        "PRIVATE",
        "TOLLWAY",
        "FROM_SPEED_LIMIT",
        "TO_SPEED_LIMIT",
        "PUBLIC_ACCESS"
      ]
    },
    "ObjMtlReferenceRule": {
      "expectedMtlExtension": ".MTL",
      "caseSensitive": false,
      "allowMissingMtllib": false
    },
    "PoiTableRule": {
      "latitude_range": [
        -90.0,
        90.0
      ],
      "longitude_range": [
        -180.0,
        180.0
      ],
      "expectedHeaders": [
        "POI_ID",
        "POI_TYPE",
        "LAT",
        "LON"
      ]
    },
    "RdfIntegrityRule": {
      "check_building_3d_subfolders": true
    },
    "RootStructureRule": {
      "expected_children": [
        "*_3DLandmarks",
        "*_RDF",
        "*_Shapefiles"
      ]
    },
    "ShapefileCompletenessRule": {
      "requiredComponents": [
        ".shx",
        ".dbf"
      ],
      "caseSensitive": false
    },
    "ShapefilePrjRule": {
      "acceptedTokens": [
        "WGS 84",
        "WGS84",
        "WGS_1984",
        "WGS-84",
        "EPSG:4326",
        "4326"
      ]
    },
    "dataTypeValidationRule": {
      "synonyms": {
        "link id": "Link ID",
        "linkid": "Link ID",
        "latitude": "Latitude / Longitude",
        "longitude": "Latitude / Longitude",
        "lat": "Latitude / Longitude",
        "lon": "Latitude / Longitude",
        "oneway": "One-Way",
        "postal code": "Postal Code",
        "postcode": "Postal Code",
        "phone": "Phone Number"
      },
      "rules": [
        {
          "name": "type",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "link id",
          "type": "integer",
          "allowEmpty": false,
          "minimum": 0.0,
          "maximum": 0.0
        },
        {
          "name": "latitude",
          "type": "float",
          "allowEmpty": false,
          "minimum": -90.0,
          "maximum": 90.0
        },
        {
          "name": "longitude",
          "type": "float",
          "allowEmpty": false,
          "minimum": -180.0,
          "maximum": 180.0
        },
        {
          "name": "node type",
          "type": "string",
          "allowEmpty": false,
          "enum": [
            "intersection",
            "termination of a link",
            "change of attribution",
            "shape point"
          ]
        },
        {
          "name": "z-level",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "aligned",
          "type": "boolean",
          "allowEmpty": false
        },
        {
          "name": "street name",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "address range",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "address scheme",
          "type": "string",
          "allowEmpty": true,
          "enum": [
            "Even",
            "Odd",
            "Mixed"
          ]
        },
        {
          "name": "one-way",
          "type": "boolean",
          "allowEmpty": false
        },
        {
          "name": "access characteristics",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "functional class",
          "type": "integer",
          "allowEmpty": false,
          "minimum": 1.0,
          "maximum": 5.0
        },
        {
          "name": "language code",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "country",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "postal code",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "cartography feature",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "polygon formation",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "poi category",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "poi name",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "phone number",
          "type": "string",
          "allowEmpty": true,
          "pattern": "^\\+?[0-9 \\-/()]{3,}$"
        },
        {
          "name": "open 24 hours",
          "type": "boolean",
          "allowEmpty": false
        },
        {
          "name": "parent/child poi",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "tollway",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "private",
          "type": "string",
          "allowEmpty": false
        },
        {
          "name": "public_access",
          "type": "string",
          "allowEmpty": false
        }
      ]
    }
  }
}